@model IEnumerable<AspNetCoreBluemixResearch.Web.Models.Phone>
@{
  ViewBag.Title = "Phones Catalog";
}
<h3>Phones</h3>
<table class="table-condensed">
    <tr>
        <th>Model</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (var phone in Model)
    {
        <tr>
            <td>@phone.Name</td>
            <td>@phone.Price</td>
            <td><a asp-action="Buy" asp-controller="Home" asp-route-id="@phone.Id">Buy</a></td>
            <td>
                <a asp-action="Details" asp-controller="Home" asp-route-id="@phone.Id">Details</a> |
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@phone.Id">Edit</a> |
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@phone.Id">Delete</a>
            </td>
        </tr>
    }
</table>
<br />
<a asp-action="Create" asp-controller="Home">Add phone</a>