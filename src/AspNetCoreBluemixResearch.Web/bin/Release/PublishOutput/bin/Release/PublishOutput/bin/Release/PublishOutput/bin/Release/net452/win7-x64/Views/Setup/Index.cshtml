@model AspNetCoreBluemixResearch.Web.Models.ConnectionsViewModel
@{
    ViewBag.Title = "Setup";
}
<h2>Setup</h2>
<form asp-controller="Setup" asp-action="CreateConnection" class="form-horizontal">
    <div class="form-group">
        <label asp-for="ConnectionSelected" class="col-md-2 control-label">Connection provider</label>
        <div class="col-md-4">
            <select asp-for="ConnectionSelected" asp-items="@Model.Connections" class="form-control">
                <option>Select the connection</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="OK" class="btn btn-default" />
        </div>
    </div>
</form>